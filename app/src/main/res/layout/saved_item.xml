<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="8dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/tvPairS" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvRateS" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btnEditS" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Редактировать"/>
        <Button android:id="@+id/btnDeleteS" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Удалить" android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
